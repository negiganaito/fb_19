{
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@fb-utils/*": ["./src/utils/*"],
      "@fb-contexts/*": ["./src/contexts/*"],
      "@fb-error/*": ["./src/error/*"],
      "@fb-placeholder/*": ["./src/placeholder/*"],
      "@fb-hooks/*": ["./src/hooks/*"],
      "@fb-layout/*": ["./src/layout/*"],
      "@fb-text/*": ["./src/text/*"],
      "@fb-theme/*": ["./src/theme/*"],
      "@fb-keyboard/*": ["./src/keyboard/*"],
      "@fb-dump/*": ["./src/dump/*"],
      "@fb-platform/*": ["./src/platform/*"]
    }
  }
}
